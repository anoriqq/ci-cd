{
  "name": "ci-cd",
  "version": "1.1.0",
  "main": "index.js",
  "repository": "git@github.com:anoriqq/ci-cd.git",
  "author": "anoriqq <shota.yoshikawa@anoriqq.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint --fix --ext .ts './src/**/*'",
    "lint:ci": "eslint --fix --format junit -o reports/eslint/results.xml --ext .ts ./src/**/*",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "start": "webpack --config webpack.dev.js --progress && node dist/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits && lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "yarn eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-import-resolver-webpack": "0.12.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.1.3",
    "precise-commits": "1.0.2",
    "prettier": "2.0.4",
    "ts-jest": "25.3.1",
    "ts-loader": "7.0.0",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2"
  }
}
